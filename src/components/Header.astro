      <!-- dropdown menu -->
      <div class="dropdown">
        <a href="/nor-wool">nor-wool <span class="arrow-down"></span></a>
        <div class="dropdown-content">
          <a href="/nor-wool">inspiration</a>
          <a href="/nor-wool">history</a>
          <a href="/nor-wool">info</a>
          <a href="/nor-wool">norwegian wool</a>
        </div>
      </div>
      <a href="https://vingtorofnorway.com/">music</a>
      <a href="/about-us">about us</a>
      <a href="/contact-us">contact us</a>
      <a href="/info">information</a>
    </nav>
  </div>
</header>