---
// import { Image } from "astro:assets";
import { type CollectionEntry } from "astro:content";

type Props = {
  card: CollectionEntry<"discover-more">;
};

const { card } = Astro.props;
const { image, description, title, tag, link } = card.data;

console.log(Astro.props);


---

<article class="post-card border-2 border-gray-500/20 overflow-hidden rounded-md shadow-lg flex flex-col items-start gap-2">
    <div class="meta">
      <img src={image} alt={image ?? "image"} loading="lazy" />
    </div>
    <div class="px-4 pb-6 flex post-card-content text-gray-700">
      
      <h3 class="font-bold text-sm text-gray-700/70">{tag}</h3>
      <h2 class="font-bold text-md ">{title}</h2>
      <p class="text-gray-600 line-clamp-3">{description}</p>
      <a href={`/posts/${link}`} class="underline-offset-2 underline hover:text-opacity-50 ">Read More</a>
    </div>
</article>

<style>
  .post-card {
  flex: 1 1 330px;
  max-width: 400px;

  > div {
    display: grid;
    gap: var(--size-1);
  }
}
/* css 2023 give a padding to with em to each element appart from the top one */
.post-card-content > *:not(:first-child) {
  padding-top: .5em;
}


</style>