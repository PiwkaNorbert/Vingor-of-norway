---
import { ViewTransitions } from 'astro:transitions';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';
const { pageTitle } = Astro.props;
---
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" href="/griegmusic/assets/favicon.png" type="image/png" sizes="32x32">
		<meta name="viewport" content="width=device-width" />
		<title>{pageTitle}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet">
    <link rel="preload" href="https://bejamas.io/fonts/recoleta/Recoleta-SemiBold--subset.woff2" as="font" type="font/woff2" crossorigin="">
		<ViewTransitions />
	</head>
	<body transition:animate="none">
    <Header />
    <slot />
	<Footer />
	</body>
</html>
